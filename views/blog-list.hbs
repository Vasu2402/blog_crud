<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog Feed</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Font Awesome for icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  
  <style>
    .comment-link:hover {
      color: #28a745; 
    }
    
    .like-link:hover {
      color: #dc3545; 
    }

    .comment-link:hover i {
      color: #28a745;
    }
    
    .like-link:hover i {
      color: #dc3545;
    }
  </style>
</head>
<body>
  
  <!-- ðŸ§­ Navbar -->
  {{> header }}
  
  <!-- ðŸ“° Blog Feed -->
  <div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Blog Feed</h2>

    {{#each blogs}}
      <div class="card mb-4 shadow-lg">
        <div class="card-body">
          <div class="d-flex">
            <!-- Avatar -->
            <div class="mr-3">
              <div class="d-flex justify-content-center align-items-center bg-primary text-white rounded-circle" style="width: 48px; height: 48px;">
                {{this.author.[0]}}
              </div>
            </div>

            <div class="flex-grow-1">
              <div class="d-flex justify-content-between">
                <div class="text-muted">@{{this.author}}</div>
                <div class="text-muted small">{{this.createdAt}}</div>
              </div>
              <h5 class="card-title mt-2">{{this.title}}</h5>
              <p class="card-text text-muted">{{this.content}}</p>
              <div class="d-flex flex-wrap mt-2">
                <div class="mb-3">
                  {{#each this.tags}}
                   <span class="badge bg-info text-dark">#{{this}}</span>
                   {{/each}}
                </div>
              </div>
            </div>
          </div>
          <!-- Social Actions (Comments, Retweets, Likes, Share) -->
          <div class="mt-3 d-flex justify-content-between text-muted small">
            <div class="d-flex">
              <span>
                <!-- Comment Link: Redirects to the comment page -->
                <a href="/blogs/{{this._id}}/comments" class="text-decoration-none text-muted comment-link">
                  <i class="fa fa-comment mr-2"></i> {{this.comments.length}}
                </a>
              </span>
    
              <span>
                <a href="#" class="text-decoration-none text-muted like-link" onclick="likePost('{{this._id}}', this)">
                  <i class="fa fa-heart mr-2"></i>
                  <span class="like-count">{{this.likes}}</span>
                </a>
              </span>
              
            </div>
            <span><a  href="/blogs/{{this._id}}/edit" class="nav-link hover:text-teal-500"><i class="fa fa-envelope fa-lg mr-2"></i>Update Message</a></span>

          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <!-- Bootstrap JS (with Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    async function likePost(blogId, element) {
      try {
        const res = await fetch(`/blogs/${blogId}/like`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          }
        });

        const data = await res.json();

        if (res.ok) {
          const likeCountSpan = element.querySelector(".like-count");
          likeCountSpan.textContent = data.likes; 
        } else {
          console.error("Failed to like blog:", data.message);
        }
      } catch (err) {
        console.error("Error sending like request:", err);
      }
    }
  </script>
</body>
</html>
